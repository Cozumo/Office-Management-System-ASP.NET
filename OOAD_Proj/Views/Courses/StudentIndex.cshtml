@model IEnumerable<OOAD_Proj.Models.Course>

@{
    ViewBag.Title = "StudentIndex";
}

<h2>StudentCourses</h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.course_name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.course_hrs)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Department.D_name)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.course_name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.course_hrs)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Department.D_name)
            </td>
        </tr>
    }

</table>
