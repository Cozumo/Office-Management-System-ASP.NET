@model OOAD_Proj.Models.Student

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

@using (Html.BeginForm("SLog", "Login", FormMethod.Post))
{
    @Html.LabelFor(model => model.S_id, new { htmlAttributes = new { @class = "control-label col-md-2" } })
    <br />
    @Html.TextBoxFor(model => model.S_id, new { htmlAttributes = new { @class = "form-control" } })
    <br>
    <br>
    @Html.LabelFor(model => model.S_pass, new { htmlAttributes = new { @class = "control-label col-md-2" } })
    <br />
    @Html.PasswordFor(model => model.S_pass, new { htmlAttributes = new { @class = "form-control" } })
    <br>
    <br>


    <input type="submit" value="Click to Login" name="SLog" class="btn btn-default"/> 
    @ViewBag.Errormsg
    <br />
}
