@model OOAD_Proj.Models.Teacher

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

@using (Html.BeginForm("TLog", "Login", FormMethod.Post))
{
    @Html.LabelFor(model => model.T_id, new { htmlAttributes = new { @class = "control-label col-md-2" } })
    <br />
    @Html.TextBoxFor(model => model.T_id, new { htmlAttributes = new { @class = "form-control" } })
    <br>
    <br>
    @Html.LabelFor(model => model.T_pass, new { htmlAttributes = new { @class = "control-label col-md-2" } })
    <br />
    @Html.PasswordFor(model => model.T_pass, new { htmlAttributes = new { @class = "form-control" } })
    <br>
    <br>


    <input type="submit" value="Click to Login" name="TLog" class="btn btn-default"/>

    @ViewBag.Errormsg
    <br />
}